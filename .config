# Target System and Profile
CONFIG_TARGET_ipq806x=y
CONFIG_TARGET_ipq806x_generic=y
CONFIG_TARGET_ipq806x_generic_DEVICE_ruijie_rg-mtfi-m520=y

# =================================================
# 我们需要的核心功能 (Core functions we need)
# =================================================
CONFIG_PACKAGE_kmod-video-core=y
CONFIG_PACKAGE_kmod-video-uvc=y
CONFIG_PACKAGE_usbutils=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_uqmi=y
CONFIG_PACKAGE_luci-proto-qmi=y

# =================================================
# 常用功能和便利工具 (Common functions and utilities)
# =================================================

# 完整的LuCI网页界面支持
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-lib-ipkg=y
# 添加中文语言包
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# 文件系统支持 (让U盘支持更多格式)
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-ntfs=y
CONFIG_PACKAGE_kmod-fs-exfat=y

# 常用网络工具
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y

# 文件共享 (Samba)
CONFIG_PACKAGE_luci-app-samba4=y

# 动态DNS
CONFIG_PACKAGE_luci-app-ddns=y

# 广告屏蔽 (AdGuard Home) - 可选，这个包比较大
# CONFIG_PACKAGE_luci-app-adguardhome=y

# 科学上网插件 (示例，按需开启)
# CONFIG_PACKAGE_luci-app-passwall=y
# CONFIG_PACKAGE_luci-app-ssr-plus=y
