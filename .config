# =================================================
# Target System & Profile (目标设备与型号)
# =================================================
CONFIG_TARGET_ipq806x=y
CONFIG_TARGET_ipq806x_generic=y
CONFIG_TARGET_ipq806x_generic_DEVICE_ruijie_rg-mtfi-m520=y

# =================================================
# LuCI Web Interface (网页管理界面)
# =================================================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
# 预置中文语言包
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
# 推荐主题 (Bootstrap为默认, Argon为备选)
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-i18n-argon-zh-cn=y

# =================================================
# Kernel Modules - Hardware Support (内核模块 - 硬件驱动)
# =================================================

# --- 视频支持 (您KVM项目的核心) ---
CONFIG_PACKAGE_kmod-video-core=y
CONFIG_PACKAGE_kmod-video-uvc=y

# --- USB 核心支持 ---
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y

# --- USB 存储支持 ---
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y # U盘加速协议
CONFIG_PACKAGE_block-mount=y # 自动挂载工具

# --- USB 串口支持 (用于CH582等设备) ---
CONFIG_PACKAGE_kmod-usb-acm=y
CONFIG_PACKAGE_kmod-usb-serial=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-usb-serial-wwan=y

# --- USB 网卡支持 (兼容您之前接入过的ASIX网卡) ---
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-usb-net-asix-ax88179=y

# =================================================
# Filesystem Support (文件系统支持)
# =================================================
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y # FAT32
CONFIG_PACKAGE_kmod-fs-exfat=y
CONFIG_PACKAGE_ntfs-3g=y # NTFS读写支持

# =================================================
# 4G/LTE Modem Support (4G模块支持)
# =================================================
CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_uqmi=y
CONFIG_PACKAGE_luci-proto-qmi=y
CONFIG_PACKAGE_luci-app-sms-tool=y # LuCI的短信收发工具

# =================================================
# Basic System Utilities (基础系统工具)
# =================================================
CONFIG_PACKAGE_usbutils=y  # 提供 lsusb 命令
CONFIG_PACKAGE_ca-certificates=y # 提供SSL证书，解决https下载问题
CONFIG_PACKAGE_htop=y # 进程查看器
CONFIG_PACKAGE_nano=y # 命令行文本编辑器
CONFIG_PACKAGE_wget-ssl=y # 完整版wget
CONFIG_PACKAGE_curl=y # curl工具
CONFIG_PACKAGE_v4l-utils=y # 视频设备管理工具

# =================================================
# Common Applications (常用应用)
# =================================================
CONFIG_PACKAGE_luci-app-samba4=y # 文件共享
# CONFIG_PACKAGE_luci-app-ddns=y # 动态DNS

