# Target System
CONFIG_TARGET_ipq806x=y
CONFIG_TARGET_ipq806x_generic=y

# Target Profile
CONFIG_TARGET_ipq806x_generic_DEVICE_ruijie_rg-mtfi-m520=y

# =================================================
# Gemini: Add essential packages for KVM project
# =================================================

# Kernel Modules for Video Support
CONFIG_PACKAGE_kmod-video-core=y
CONFIG_PACKAGE_kmod-video-uvc=y

# Kernel Modules for USB Serial (for CH582 etc.)
CONFIG_PACKAGE_kmod-usb-acm=y

# QMI Drivers for 4G Modem
CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_uqmi=y

# Filesystem Support
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_block-mount=y

# LuCI Web Interface
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-proto-qmi=y
